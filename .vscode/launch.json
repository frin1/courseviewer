{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "-path", "my-courses",      // path to the folder containing the courses
                "-hide", ".srt",            // hide files with the .srt extension
                "-db", "memory",            // use an in-memory database
                "-dbpath", "content.db",    // path to the database file (when not in memory)
            ],
            "env": {},
            "buildFlags": "",
            "init": false,
            "trace": "verbose"
        }
    ]
}